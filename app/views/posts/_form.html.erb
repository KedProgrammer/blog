<%= form_for(@post) do |f| %>
    <%= render 'shared/error_messages_post' %>
    <%= f.label :tittle %>
    <%= f.text_field :tittle %>

    <%= f.label :content%>

    <%= f.text_area :content, class: 'textarea' %>
    <%= f.submit @post.new_record? ? "Crear post" : "Editar post" , class: 'btn btn-primary'%>
<% end %>